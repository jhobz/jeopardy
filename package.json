{
    "name": "jeopardy",
    "version": "0.0.0",
    "description": "Jeopardy-style game",
    "homepage": "https://github.com/jhobz/jeopardy",
    "author": {
        "name": "Jeff Hobson",
        "email": "jeffrey296@gmail.com",
        "url": "https://github.com/jhobz"
    },
    "files": [
        "dashboard",
        "graphics",
        "extension.js",
        "extension"
    ],
    "keywords": [
        "",
        "nodecg-bundle"
    ],
    "nodecg": {
        "assetCategories": [
            {
                "name": "game-data",
                "title": "Game Data File",
                "allowedTypes": [
                    "csv",
                    "json"
                ]
            },
            {
                "name": "nameplates",
                "title": "Player Nameplates",
                "allowedTypes": [
                    "jpg",
                    "jpeg",
                    "gif",
                    "png"
                ]
            }
        ],
        "compatibleRange": "^2.0.0",
        "graphics": [
            {
                "file": "jeopardyboard.html",
                "width": 1920,
                "height": 1080,
                "singleInstance": false
            },
            {
                "file": "buzzer.html",
                "width": 1920,
                "height": 1080,
                "singleInstance": false
            },
            {
                "file": "nameplate.html",
                "width": 1920,
                "height": 1080,
                "singleInstance": false
            }
        ],
        "dashboardPanels": [
            {
                "name": "jeopardy",
                "title": "Jeopardy",
                "width": 6,
                "file": "jeopardy.html",
                "headerColor": "#525F78"
            },
            {
                "name": "player-setup",
                "title": "Player Controls",
                "width": 3,
                "file": "playersetup.html",
                "headerColor": "#525F78"
            },
            {
                "name": "buzzer-controls",
                "title": "Buzzer Controls",
                "width": 2,
                "file": "buzzerControls.html",
                "headerColor": "#525F78"
            },
            {
                "name": "timer-controls",
                "title": "Timer Controls",
                "width": 2,
                "file": "timerControls.html",
                "headerColor": "#525F78"
            },
            {
                "name": "final-jeopardy-controls",
                "title": "Final Jeopardy",
                "width": 3,
                "file": "finalJeopardyControls.html",
                "headerColor": "#525F78"
            }
        ],
        "soundCues": [
            {
                "name": "timeout",
                "defaultFile": "src/graphics/assets/sounds/timeout.mp3",
                "assignable": false
            },
            {
                "name": "round-over",
                "defaultFile": "src/graphics/assets/sounds/roundover.mp3",
                "assignable": false
            }
        ]
    },
    "browserslist": {
        "production": [
            ">0.5%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "scripts": {
        "build": "node scripts/build.mjs --all",
        "build:extension": "node scripts/build.mjs --extension",
        "watch": "node scripts/build.mjs --all --watch",
        "watch:browser": "node scripts/build.mjs --dashboard --graphics --watch",
        "watch:schemas": "node scripts/build.mjs --schemas --watch",
        "dev": "concurrently --kill-others \"npm run watch:browser\" \"nodemon\"",
        "generate-schema-types": "trash src/types/schemas && nodecg schema-types"
    },
    "dependencies": {
        "@nodecg/react-hooks": "^1.0.3",
        "@types/react": "*",
        "@types/react-dom": "*",
        "csvtojson": "^2.0.10",
        "react": "*",
        "react-dom": "*",
        "styled-components": "^6.1.11",
        "ts-node": "*"
    },
    "devDependencies": {
        "@nodecg/types": "^2.0.0",
        "@parcel/config-default": "*",
        "@parcel/core": "*",
        "@parcel/reporter-cli": "*",
        "@parcel/validator-typescript": "*",
        "@types/node": "^18",
        "concurrently": "*",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.2",
        "eslint-plugin-react-hooks": "^4.6.2",
        "glob": "^10.2.7",
        "nodemon": "*",
        "prettier": "^3.3.2",
        "trash-cli": "*",
        "typescript": "^5.1.3"
    },
    "proxy": "http://localhost:9090",
    "repository": "https://github.com/jhobz/jeopardy.git",
    "license": "MIT"
}
